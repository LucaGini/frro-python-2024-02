BoxLayout:
    orientation: 'vertical'
    spacing: 10

    RecycleView:
        id: rv
        viewclass: 'Label'
        data: [{'text': str(x)} for x in range(10)] 
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

    BoxLayout:
        size_hint_y: None
        height: dp(50)
        spacing: 10

        Button:
            text: 'Agregar Item'
            on_press: root.ids.rv.data.append({'text': str(len(root.ids.rv.data))})

        Button:
            text: 'Eliminar Item'
            on_press: root.ids.rv.data.pop() if root.ids.rv.data else None


