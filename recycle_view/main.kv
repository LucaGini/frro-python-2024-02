<RV>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10

        RecycleView:
            id: rv
            viewclass: 'Label'
            data: root.data  # Bind data property of RV to RecycleView's data
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'

        BoxLayout:
            size_hint_y: None
            height: dp(50)
            spacing: 10

            Button:
                text: 'Agregar Item'
                on_press: root.add_item()

            Button:
                text: 'Eliminar Item'
                on_press: root.remove_item()
