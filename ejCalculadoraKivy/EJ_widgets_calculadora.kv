GridLayout:
    rows: 2
    Label:
        id: label2
        text: " "
    GridLayout:
        rows: 4
        cols: 4
        padding: 5
        spacing: 5
        Button:
            text: "7"
            on_press: label2.text += self.text
        Button:
            text: "8"
            on_press: label2.text += self.text
        Button:
            text: "9"
            on_press: label2.text += self.text
        Button:
            text: "/"
            on_press: label2.text += self.text
        Button:
            text: "4"
            on_press: label2.text += self.text
        Button:
            text: "5"
            on_press: label2.text += self.text
        Button:
            text: "6"
            on_press: label2.text += self.text
        Button:
            text: "*"
            on_press: label2.text += self.text
        Button:
            text: "1"
            on_press: label2.text += self.text
        Button:
            text: "2"
            on_press: label2.text += self.text
        Button:
            text: "3"
            on_press: label2.text += self.text
        Button:
            text: "+"
            on_press: label2.text += self.text
        Button:
            text: "0"
            on_press: label2.text += self.text
        Button:
            text: "="
            on_press: label2.text = str(eval(label2.text))
        Button:
            text: "CE"
            on_press: label2.text = ""
        Button:
            text: "-"
            on_press: label2.text += self.text
